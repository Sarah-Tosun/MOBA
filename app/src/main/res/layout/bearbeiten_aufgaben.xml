<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:label="@string/actionBarNameAufgaben"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_save"
        android:id="@+id/fb_ok_aufgaben_einst"
        app:backgroundTint="?attr/actionModeSplitBackground"
        android:onClick="onClick"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        app:layout_anchorGravity="bottom|right|end" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Spinner
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/spinner"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:background="@drawable/layout_spinner" />


        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/datum_textView_aufg"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textSize="20sp" />

        <Button
            android:text="@string/ButtonDatum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/changedatum_aufg"
            android:layout_marginTop="10dp"
            android:textAlignment="center" />

        <EditText
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/beschreibung_edittext_aufg"
            android:textAlignment="center"
            android:textSize="20sp"
            android:hint="Beschreibung" />


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>