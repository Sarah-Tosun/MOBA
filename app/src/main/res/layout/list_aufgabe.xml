<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        app:srcCompat="@drawable/deutsch"
        android:id="@+id/icon_image_aufg"
        android:layout_alignParentTop="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_aufg"
        android:layout_weight="2"
        android:layout_alignBottom="@+id/icon_image_aufg"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="6dp"
        android:focusable="false"
        android:clickable="false"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/checkbox_aufg"
        android:id="@+id/datum_textview_aufg" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:id="@+id/fach_text_aufg"
        android:layout_marginStart="14dp"
        android:textSize="24sp"
        android:layout_below="@+id/datum_textview_aufg"
        android:layout_toEndOf="@+id/icon_image_aufg" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beschreibung_textview_aufg"
        android:layout_alignBottom="@+id/checkbox_aufg"
        android:layout_alignStart="@+id/fach_text_aufg" />
    <TextView
        android:id="@+id/textview_kuerzel_aufg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/icon_image_aufg"
        android:layout_alignTop="@+id/icon_image_aufg"
        android:layout_alignRight="@+id/icon_image_aufg"
        android:layout_alignBottom="@+id/icon_image_aufg"
        android:layout_margin="1dp"
        android:gravity="center"
        android:textColor="#000000"
        android:visibility="invisible"
        android:textSize="24sp" />

</RelativeLayout>