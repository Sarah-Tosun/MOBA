<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:label="@string/actionBarNameStundenPlan"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/spinner"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:background="@drawable/layout_spinner" />


        <EditText
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="neues Fach"
            android:ems="10"
            android:id="@+id/neuesFach"
            android:textColor="?android:attr/colorControlNormal"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Kürzel für Icon"
            android:ems="10"
            android:id="@+id/kürzel"
            android:textColor="?android:attr/colorControlNormal"
            android:textAlignment="center"
            android:textSize="20sp" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/fb_ok_stundenplan"
            app:backgroundTint="?attr/actionModeSplitBackground"
            android:onClick="onClick"
            android:paddingRight="4dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="350dp"
            android:paddingEnd="4dp" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
