<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:label="@string/actionBarNameStundenPlan"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/spinner_bearbeiten_stundp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:background="@drawable/layout_spinner" />


        <EditText
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/neuesFach_bearbeiten_stundp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:hint="@string/neues_fach"
            android:visibility="invisible" />

        <EditText
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/kürzel_bearbeiten_stundp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:hint="@string/kürzel_des_icons"
            android:visibility="invisible" />

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/fb_ok_stundenplan_bearbeiten_stundp"
        app:backgroundTint="?attr/actionModeSplitBackground"
        android:onClick="onClick"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>
