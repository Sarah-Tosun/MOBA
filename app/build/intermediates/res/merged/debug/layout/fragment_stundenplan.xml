<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/gridview_StundenplanFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="5"
        android:horizontalSpacing="4dp"
        android:verticalSpacing="4dp"
        android:layout_below="@+id/MO_Fragment"
        android:stretchMode="columnWidth"
        android:background="#00000000">
    </GridView>

    <TextView
        android:text="FR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:id="@+id/FR_Fragment"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="MO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MO_Fragment"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp" />

    <TextView
        android:text="DI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DI_Fragment"
        android:textSize="18sp"
        android:layout_marginStart="58dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/MO_Fragment" />

    <TextView
        android:text="MI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MI_Fragment"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="DO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:id="@+id/DO_Fragment"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/MI_Fragment" />

</RelativeLayout>